	START	100
	LDA	#27
	STA	X1
	LDA	#0
	STA	X2
	LDS	#3	.INITIALIZE REGISTER S TO 3
	LDT	#30	.INITIALIZE REGISTER T TO 30
REVLP	LDX	X1
	LDA	ALPHA,X	.LOAD WORD FROM ALPHA INTO REGISTER A
	LDX	X2
	STA	BETA,X	.STORE WORD IN BETA
	LDA	X1
	SUB	#3
	STA	X1
	LDA	X2
	ADD	#3
	STA	X2
	COMPR	X,T	.COMPARE NEW X INDEX VALUE TO 30
	JLT	REVLP	.LOOP IF INDEX X GREATER THAN 30
	RSUB
X1	RESW	1
X2	RESW	1
ALPHA	WORD	7
	WORD	11
	WORD	4
	WORD	2
	WORD	5
	WORD	9
	WORD	3
	WORD	13
	WORD	14
	WORD	8
BETA	RESW	10
	END		
